@model PeerTutor.Models.CourseTutor

@{
    ViewData["Title"] = "Add Expertise";
}

<h4>Add Expertise</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Grade" class="control-label col-md-2"></label>
                <select asp-for="Grade" class="form-control col-md-6" asp-items="Html.GetEnumSelectList<CourseTutor.Grades>()"></select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="hidden" name="UserId" class="form-control" value="@ViewBag.UserId" />
            </div>
            <div class="form-group row">
                <label asp-for="Course" class="control-label col-md-2"></label>
                <select asp-for="CourseId" class="form-control col-md-6" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
