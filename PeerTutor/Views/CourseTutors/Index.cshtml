@model IEnumerable<PeerTutor.Models.CourseTutor>

@{
    ViewData["Title"] = "Expertise";
}

<h1>My Expertise</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseTitle)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId, courseId = item.CourseId }, new { @class = "btn-link" }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserId, courseId = item.CourseId }, new { @class = "btn-link" })  |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId, courseId = item.CourseId }, new { @class = "btn-link" })
            </td>
        </tr>
}
    </tbody>
</table>
