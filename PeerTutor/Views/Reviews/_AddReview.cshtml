@model Review
@{
    ViewData["Title"] = "Create Review";
}


<div class="row modal fade" id="add-review" tabindex="-1" role="dialog">
    <div class="col-md-4 modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addReviewLabel">Add review</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="review-form">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-7">
                            <div onmouseout="CRateSelected()">
                                <span class="starFade" id="Rate1" onclick="CRate(1)" onmouseover="CRateOver(1)" onmouseout="CRateOut(1)"></span><span class="starFade" id="Rate2" onclick="CRate(2)" onmouseover="CRateOver(2)" onmouseout="CRateOut(2)"></span><span class="starFade" id="Rate3" onclick="CRate(3)" onmouseover="CRateOver(3)" onmouseout="CRateOut(3)"></span><span class="starFade" id="Rate4" onclick="CRate(4)" onmouseover="CRateOver(4)" onmouseout="CRateOut(4)"></span><span class="starFade" id="Rate5" onclick="CRate(5)" onmouseover="CRateOver(5)" onmouseout="CRateOut(5)"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group row">
                        <input type="hidden" name="ReviewerId" class="form-control" value="@Model.ReviewerId" />
                    </div>

                    <div class="form-group row">
                        <input type="hidden" name="RevieweeId" class="form-control" value="@Model.RevieweeId" />
                    </div>
                    <input type="hidden" name="Rating" id="Rating" value="0" />

                    <div class="form-group">
                        <label asp-for="ReviewContent"></label>
                        <textarea asp-for="ReviewContent" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="ReviewContent" class="text-danger"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>


